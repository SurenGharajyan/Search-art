<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView android:layout_height="match_parent"
        android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_all_info">

        <ImageView
            android:id="@+id/movie_img_alert"
            android:layout_width="@dimen/ic_size_width"
            android:layout_height="@dimen/ic_size_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            />

        <RelativeLayout
            android:id="@+id/r_first_part_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/movie_img_alert"
            android:layout_toStartOf="@+id/movie_img_alert">

            <RelativeLayout
                android:id="@+id/movie_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/movie_img"
                android:layout_toStartOf="@+id/movie_img"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movie_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Name: "
                    android:textColor="#000"
                    android:textSize="@dimen/txt_name_size" />

                <TextView
                    android:id="@+id/movie_is"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/movie_name"


                    android:text="set Movie Name "
                    android:textSize="@dimen/txt_name_size" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/year_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/movie_linear"
                android:layout_marginTop="@dimen/l_margin_top"
                android:layout_toLeftOf="@+id/movie_img"
                android:layout_toStartOf="@+id/movie_img"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/movie_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Year: "
                    android:textColor="#000"
                    android:textSize="@dimen/txt_name_size" />

                <TextView
                    android:id="@+id/movie_year_is"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_toRightOf="@id/movie_name"
                    android:text="set Year of created "
                    android:textSize="@dimen/txt_name_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/type_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/year_linear"
                android:layout_marginTop="@dimen/l_margin_top"
                android:layout_toLeftOf="@+id/movie_img"
                android:layout_toStartOf="@+id/movie_img"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movie_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is a: "
                    android:textColor="#000"
                    android:textSize="@dimen/txt_name_size" />

                <TextView
                    android:id="@+id/movie_type_is"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_toRightOf="@id/movie_name"
                    android:text="set type "
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/time_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/type_linear"
                android:layout_marginTop="@dimen/l_margin_top"
                android:layout_toLeftOf="@+id/movie_img"
                android:layout_toStartOf="@+id/movie_img"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movie_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Runtime: "
                    android:textColor="#000"
                    android:textSize="@dimen/txt_name_size" />

                <TextView
                    android:id="@+id/movie_time_is"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_toRightOf="@id/movie_name"
                    android:text="set time "
                    android:textSize="@dimen/txt_name_size" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/genre_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/movie_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/movie_img"
            android:layout_below="@id/r_first_part_info"
            android:layout_marginTop="@dimen/l_margin_genre"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movie_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre: "
                android:textColor="#000"
                android:textSize="@dimen/txt_name_size" />

            <TextView
                android:id="@+id/movie_genre_is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@id/movie_name"
                android:text="set genre "
                android:textSize="@dimen/txt_name_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/director_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/genre_linear"
            android:layout_marginTop="@dimen/l_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movie_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Director: "
                android:textColor="#000"
                android:textSize="@dimen/txt_name_size" />

            <TextView
                android:id="@+id/movie_director_is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@id/movie_name"
                android:text="set director name "
                android:textSize="@dimen/txt_name_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/plot_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/director_linear"
            android:layout_marginTop="@dimen/l_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movie_plot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plot: "
                android:textColor="#000"
                android:textSize="@dimen/txt_name_size" />

            <TextView
                android:id="@+id/movie_plot_is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@id/movie_name"
                android:text="set plot "
                android:textSize="@dimen/txt_name_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/box_office_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/plot_linear"
            android:layout_marginTop="@dimen/l_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movie_box_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Box Office: "
                android:textColor="#000"
                android:textSize="@dimen/txt_name_size" />

            <TextView
                android:id="@+id/movie_box_office_is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@id/movie_name"
                android:text="set box office "
                android:textSize="@dimen/txt_name_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/production_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/box_office_linear"
            android:layout_marginTop="@dimen/l_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movie_production"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Production: "
                android:textColor="#000"
                android:textSize="@dimen/txt_name_size" />

            <TextView
                android:id="@+id/movie_production_is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@id/movie_name"
                android:text="set production "
                android:textSize="@dimen/txt_name_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/rate_linear"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/production_linear"
            android:layout_marginTop="@dimen/l_margin_top"
            android:layout_toLeftOf="@+id/movie_img"
            android:layout_toStartOf="@+id/movie_img"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movie_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: "
                android:layout_gravity="center_vertical"
                android:textColor="#000"
                android:textSize="@dimen/txt_name_size" />

            <RatingBar
                style="?android:attr/ratingBarStyleIndicator"
                android:id="@+id/rating_stars"
                android:isIndicator="false"
                android:theme="@style/RatingBar"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>